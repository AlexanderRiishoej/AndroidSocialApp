<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            style="@style/PrimaryLinearLayoutLoginStyle">

            <include
                android:id="@+id/toolbar_teal"
                layout="@layout/toolbar_teal" />

            <LinearLayout
                style="@style/PrimaryLinearLayoutLoginStyle"
                android:layout_margin="10dp"
                tools:context=".MainActivity">

                <LinearLayout
                    style="@style/SubLinearLayoutLoginStyle"
                    android:layout_margin="5dp">

                    <View style="@style/bigDivider" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/UsernameImage"
                            style="@style/ImageViewLoginStyle"
                            android:layout_alignBottom="@+id/Username"
                            android:src="@drawable/ic_timer_auto_grey600_24dp" />

                        <EditText
                            android:id="@+id/Username"
                            style="@style/EditTextLoginStyle"
                            android:layout_toRightOf="@+id/UsernameImage"
                            android:hint="@string/username">

                            <requestFocus />
                        </EditText>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/SubLinearLayoutLoginStyle"
                    android:layout_margin="5dp">

                    <TextView
                        style="@style/TextViewLoginStyle"
                        android:text="@string/password" />

                    <View style="@style/TextFieldDivider" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/PasswordImage"
                            style="@style/ImageViewLoginStyle"
                            android:layout_alignBottom="@+id/Password"
                            android:src="@drawable/ic_lock_grey600_24dp" />

                        <EditText
                            android:id="@+id/Password"
                            style="@style/EditTextLoginStyle"
                            android:layout_toRightOf="@+id/PasswordImage"
                            android:hint="@string/password"
                            android:inputType="textPassword">

                            <requestFocus />
                        </EditText>
                    </RelativeLayout>
                </LinearLayout>

                <View style="@style/TextFieldDivider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <Button
                        android:id="@+id/Login"
                        style="@style/ButtonRaisedLoginStyle"
                        android:layout_toLeftOf="@+id/Register"
                        android:background="@drawable/selector"
                        android:onClick="LoginPressed"
                        android:text="@string/login" />

                    <Button
                        android:id="@+id/Register"
                        style="@style/ButtonRaisedLoginStyle"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/selector"
                        android:onClick="RegisterPressed"
                        android:text="@string/register" />
                </RelativeLayout>

                <View style="@style/DividerSmallLineLightThemeStyle" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="right"
                    android:minWidth="88dp"
                    android:text="@string/forgot_password"
                    android:textColor="@color/text_light_theme" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/status_text"
                        style="@style/EditTextLoginStyle"
                        android:layout_alignParentBottom="true"
                        android:inputType="text"
                        android:text="@string/status_text"
                        android:textAlignment="center" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee" />
</android.support.v4.widget.DrawerLayout>
