<?xml version="1.0" encoding="utf-8"?><!-- http://www.google.com/design/spec/components/lists.html#lists-specs --><!-- http://www.google.com/design/spec/layout/metrics-keylines.html#metrics-keylines-keylines-spacing -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_teal"
            layout="@layout/toolbar_teal" />

        <RelativeLayout
            android:id="@+id/view_group"
            style="@style/RelativeLayoutSubHeaderDesignStyle"
            android:background="@color/white">

            <TextView
                style="@style/TextViewSubHeaderStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/recent_chat" />
        </RelativeLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/activity_main_swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<ListView-->
                <!--android:id="@+id/list"-->
                <!--android:fitsSystemWindows="true"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:divider="@drawable/list_divider"-->
                <!--android:dividerHeight="1dp"-->
                <!--android:paddingBottom="8dp"-->
                <!--tools:listitem="@layout/user_chat_list_item"/>-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/userChatListRecyclerView"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|start"
                android:paddingBottom="8dp"
                android:divider="@drawable/list_divider"
                android:dividerHeight="1dp"
                android:scrollbars="vertical"
                tools:listitem="@layout/user_chat_list_item">

            </android.support.v7.widget.RecyclerView>

        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>
    <!-- The navigation drawer -->
    <!-- http://www.android4devs.com/2014/12/how-to-make-material-design-navigation-drawer.html -->
    <com.mycompany.loginapp.base.ScrimInsetFrameLayout
        android:id="@+id/scrimInsetsFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">
        <!-- To keep statusbar dark app:insetForeground="#4000"-->

        <fragment
            android:id="@+id/fragment_navigation_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|start"
            app:layout="@layout/fragment_navigation_drawer"
            android:name="com.mycompany.loginapp.NavigationDrawerFragment"/>

    </com.mycompany.loginapp.base.ScrimInsetFrameLayout>
</android.support.v4.widget.DrawerLayout>