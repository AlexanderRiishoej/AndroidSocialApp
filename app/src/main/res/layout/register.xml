<!-- The main content view -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_layout_register"
        style="@style/PrimaryLinearLayoutLoginStyle"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/toolbar_teal"
            layout="@layout/toolbar_teal" />

        <RelativeLayout
            android:id="@+id/view_group"
            style="@style/RelativeLayoutSubHeaderDesignStyle"
            android:background="@color/divider">

            <TextView
                style="@style/TextViewSubHeaderStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/sign_into_account" />
        </RelativeLayout>

        <com.mycompany.loginapp.views.transparentStatusbar.ScrimInsetFrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrimInsetsFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/main_card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:padding="8dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="5dp">

                <LinearLayout style="@style/PrimaryLinearLayoutLoginStyle">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/relative_layout_height"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextViewLabel"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:text="Email address" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/EmailImage"
                                style="@style/ImageViewLoginStyle"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/username"
                                android:src="@drawable/ic_action_email" />

                            <EditText
                                android:id="@+id/Email"
                                style="@style/EditTextLoginStyle"
                                android:layout_centerVertical="true"
                                android:hint="Your email"
                                android:inputType="textEmailAddress">

                                <requestFocus />
                            </EditText>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/relative_layout_height"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextViewLabel"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:text="@string/username" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/UsernameImage"
                                style="@style/ImageViewLoginStyle"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/username"
                                android:src="@drawable/ic_person_grey600_24dp" />

                            <EditText
                                android:id="@+id/Username"
                                style="@style/EditTextLoginStyle"
                                android:layout_centerVertical="true"
                                android:hint="@string/username"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/relative_layout_height"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextViewLabel"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:text="@string/password" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/PasswordImage"
                                style="@style/ImageViewLoginStyle"
                                android:layout_centerVertical="true"
                                android:contentDescription="@string/password"
                                android:src="@drawable/ic_lock_grey600_24dp" />

                            <EditText
                                android:id="@+id/Password"
                                style="@style/EditTextLoginStyle"
                                android:layout_centerVertical="true"
                                android:hint="@string/password"
                                android:inputType="textPassword"
                                android:transitionName="@string/transition_password" />
                        </RelativeLayout>
                    </LinearLayout>

                    <View style="@style/dividerInvisible" />


                    <RelativeLayout
                        android:id="@+id/login_buttons"
                        style="@style/RelativeLayoutInnerDesignStyle"
                        android:layout_height="48dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin">

                        <Button
                            android:id="@+id/Register"
                            style="@style/ButtonRaisedWhiteLoginStyle"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:onClick="register"
                            android:text="@string/register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <!--<View style="@style/divider" />-->

                    <!--<Button-->
                    <!--style="@style/ButtonFlatLoginStyle"-->
                    <!--android:minWidth="88dp"-->
                    <!--android:onClick="ForgotPassword"-->
                    <!--android:text="@string/forgot_password"-->
                    <!--android:layout_gravity="end"/>-->

                    <!--<View style="@style/divider" />-->

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </com.mycompany.loginapp.views.transparentStatusbar.ScrimInsetFrameLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>