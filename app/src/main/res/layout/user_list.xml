<?xml version="1.0" encoding="utf-8"?>
    <!-- http://www.google.com/design/spec/components/lists.html#lists-specs -->
    <!-- http://www.google.com/design/spec/layout/metrics-keylines.html#metrics-keylines-keylines-spacing -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/toolbar_teal"
        layout="@layout/toolbar_teal" />

    <RelativeLayout
        android:id="@+id/view_group"
        style="@style/RelativeLayoutSubHeaderDesignStyle"
        android:background="@color/white">

        <TextView
            style="@style/TextViewSubHeaderStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/recent_chat" />
    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/activity_main_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1dp"
        android:paddingBottom="8dp"
        tools:listitem="@layout/chat_item">
    </ListView>

    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
