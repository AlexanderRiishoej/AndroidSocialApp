<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="2dp" />
            <padding
                android:left="8dp"
                android:right="8dp" />
        </shape>
    </item>
</ripple>

    <!-- Stroke of the shape = border for the recycler_ripple and width = its size -->
    <!-- DashGap android:dashGap = gap in the border, and android:dashWidth = width of the visible gaps -->
    <!-- Corners of the shape android:radius="2dp" = rounded border -->
    <!-- Mask is used to keep the recycler_ripple inside of of the shape -->