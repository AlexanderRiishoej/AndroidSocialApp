<?xml version="1.0" encoding="utf-8"?>
<resources>

    --------------------------------------------------------------------------------------------------------------------------------
    <!-- Base themes -->
    <!--<style name="AppTheme" parent="AppTheme.Base" />-->

    <style name="AppTheme" parent="AppTheme.Teal" />

    <!-- Toolbar theme -->
    <style name="ToolbarTealTheme" parent="Base.Widget.AppCompat.Toolbar.Teal" />

    <!-- Toolbar popup theme -->
    <style name="ToolbarPopupTealTheme" parent="Base.Widget.AppCompat.Toolbar.Popup.Teal" />

    --------------------------------------------------------------------------------------------------------------------------------
    <!-- Theme for Material Teal -->
    <!-- Useful guide: http://www.murrayc.com/permalink/2014/10/28/android-changing-the-toolbars-text-color-and-overflow-icon-color/ -->
    <style name="AppTheme.Teal" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Colors the bottom navigation bar of the phone -->
        <item name="android:navigationBarColor">@color/teal_500</item>
        <item name="android:textColorSecondary">@color/secondary_text_icons_light_theme</item>
        <!--<item name="android:textColorSecondary">@color/teal_500</item>-->
        <!--<item name="colorPrimary">@color/specialBlueColorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/specialBlueColorPrimaryDark</item>-->
        <!--<item name="android:windowBackground">@color/text</item>-->
        <!--<item name="android:windowBackground">@color/windowBackground</item>-->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!--<item name="android:textColorPrimaryDisableOnly">@color/disable_hint_text</item>-->
        <!-- colorAccent is used as the default value for colorControlActivated, which is used to tint widgets -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textViewStyle">@style/customTextViewStyle</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Buttons -->
        <item name="android:colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:colorButtonNormal">@color/colorButtonNormal</item>
        <item name="android:colorControlActivated">@color/colorControlActivated</item>
    </style>

    <!-- ToolBar Theme -->
    <style name="Base.Widget.AppCompat.Toolbar.Teal" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textViewStyle">@style/customTextViewStyle</item>
        <!-- android:textColorPrimaryInverse is the  color of the title text in the Toolbar, in the Theme.AppCompat.Light theme:  -->
        <!-- <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_light</item> -->
        <!-- android:textColorSecondary is the color of the menu overflow icon (three vertical dots) -->
        <!--<item name="android:textColorSecondary">@color/secondary_text_icons</item>-->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- Toolbar Popup Theme -->
    <style name="Base.Widget.AppCompat.Toolbar.Popup.Teal" parent="Base.Widget.AppCompat.Toolbar">
        <!-- Background of popup item -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Color of popup item text -->
        <item name="android:textColorPrimary">@color/text_light_theme</item>
        <item name="android:textViewStyle">@style/customTextViewStyle</item>
        <item name="selectableItemBackgroundBorderless">@drawable/selector_white_background</item>
        <item name="android:selectableItemBackground">@drawable/selector_white_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <!--<item name="selectableItemBackgroundBorderless">@drawable/ripple_toolbar_item</item>-->
    </style>
    --------------------------------------------------------------------------------------------------------------------------------
</resources>